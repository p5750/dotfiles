  "permissions": {
    "allow": [
      "WebSearch",
      "WebFetch(domain:github.com)",
      "List(*)",
      "Bash(ls:*)",
      "Bash(rg:*)",
      "Bash(grep:*)",
      "Bash(sort:*)",
      "Bash(test:*)",
      "Bash(which:*)",
      "Bash(docker compose:*)",
      "Bash(git add:*)",
      "Bash(git pull:*)",
      "Bash(git checkout:*)",
      "Bash(git cherry-pick:*)",
      "Bash(git check-ignore:*)",
      "Bash(git commit:*)",
      "Bash(git status:*)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(git show:*)",
      "Bash(git blame:*)",
      "Bash(git branch:*)",
      "Bash(git switch:*)",
      "Bash(git fetch:*)",
      "Bash(git stash:*)",
      "Bash(git revert:*)",
      "Bash(git merge:*)",
      "Bash(git push:*)",
      "Bash(git reset --soft*)",
      "Bash(git reset --mixed*)",
      "Bash(git rm:*)",
      "Bash(git mv:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr diff:*)",
      "Bash(npm install:*)",
      "Bash(npm run:*)",
      "Bash(pnpm install:*)",
      "Bash(pnpm add:*)",
      "Bash(pnpm run:*)",
      "Bash(pnpm test:*)",
      "Bash(pnpm start:*)",
      "Bash(yarn install:*)",
      "Bash(yarn add:*)",
      "Bash(yarn run:*)",
      "Bash(yarn test:*)",
      "Bash(yarn start:*)",
      "Bash(bundle exec rubocop:*)",
      "Bash(afplay:*)"
    ],
    "deny": [
      "Bash(sudo:*)",
      "Bash(su:*)",
      "Bash(rm:*)",
      "Bash(rm -rf:*)",
      "Bash(git push -f:*)",
      "Bash(git push --force:*)",
      "Bash(git reset --hard*)",
      "Bash(git clean:*)",
      "Bash(git tag:*)",
      "Bash(git -C*)",
      "Bash(git add .)",
      "Bash(git add . *)",
      "Bash(git add -A*)",
      "Bash(git add --all*)",
      "Bash(git add -u*)",
      "Bash(git add --update*)",
      "Bash(git commit -a*)",
      "Bash(git commit --all*)",
      "Read(.env.*)",
      "Read(id_rsa)",
      "Read(id_ed25519)",
      "Write(.env*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(nc:*)",
      "Bash(npm uninstall:*)",
      "Bash(npm remove:*)",
      "Bash(mysql:*)",
      "Bash(find:*)",
      "Read(.env)",
      "Read(**/.env)",
      "Read(**/.env.*)",
      "Bash(docker compose config*)",
      "Bash(docker compose exec * env*)",
      "Bash(docker compose exec * cat*)",
      "Bash(docker compose exec * printenv*)",
      "Bash(docker compose exec * sh *)",
      "Bash(docker compose exec * bash *)",
      "Bash(docker compose run *)",
      "Bash(docker inspect*)",
      "Bash(docker exec*)"
    ]
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Glass.aiff"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Blow.aiff"
          }
        ]
      }
    ]
  },
  "alwaysThinkingEnabled": true,
  "model": "opus",
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh"
  }
}
